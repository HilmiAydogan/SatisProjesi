@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h6 class="display-6">
        Applications(@Model.Count())
    </h6>

    <table class="table table-hocer table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>FullName</th>
                <th>Apply At</th>
                <th>Course</th>
            </tr>
        </thead>
        <body>
            @foreach (Candidate candidate in Model)
            {
                <tr>
                    <td>@candidate.Email</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.ApplyAt</td>
                    <td>@candidate.SelectedCourse</td>
                </tr>
            }
        </body>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no apllication. please click here to apply.
        <a class="alert-link" asp-action="Apply">apply.

        </a>
    </div>

}